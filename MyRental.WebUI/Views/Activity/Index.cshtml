@model IEnumerable<MyRental.Core.Model.Activities>

@{
    ViewBag.Title = "Activities";
}

<h2>Entertaining Activities in the Area</h2>


<div class="col-md-10">

    @foreach (var item in Model)
    {
        <div class="col-md-3" style="height:300px;padding:10px;margin:10px;border:solid thick whitesmoke">
            <div class="col-md-12">
                <img class="img" style="height:100px;width:175px" src="~/Content/RoomImages/@item.Image" />

            </div>
            <div class="col-md-12">
                <strong>@Html.ActionLink(item.Name, "Details", new { id = item.Id })</strong>
            </div>
            <div class="col-md-12">
                <p>@item.Name</p>
            </div>
            <div class="col-md-12">
                <p>@item.Description</p>
            </div>
            
        </div>
    }
</div>
<div class="col-md-12 clearfix"></div>
